<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    <style name="expandedBarTextStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/login_form_light</item>

    </style>
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        ...
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="HoverTheme">
        <item name="colorControlActivated">@color/colorHover</item>
        <item name="colorControlHighlight">@color/colorHover</item>
    </style>
    <style name="HoverEffect" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:theme">@style/HoverTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
